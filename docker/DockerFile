# Dockerfile for Portfolio Service
FROM openjdk:11-jre-slim
COPY target/portfolio-service.jar /app.jar
ENTRYPOINT ["java", "-jar", "/app.jar"]
# Docker Compose file for running the application
version: '3'
services:
portfolio-service:
build: .
ports:
- "8080:8080"
environment:
- SPRING_PROFILES_ACTIVE=prod